{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2018" // Added
    ],
    // Changed from to default plugin settings
    // "target": "ES6",
    "target": "ES2018",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"]
}
